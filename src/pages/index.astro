---
import Layout from '@layouts/Default.astro';
import { getEventsFromSheets } from "../scripts/googleSheets";
import '../styles/home.css';

// 1. Fetch all events
const events = await getEventsFromSheets(false);

// 2. Current Date for filtering
const now = new Date();
now.setHours(0, 0, 0, 0); 

// 3. Logic for "Next Workshop" (Card 2)
const allWorkshops = events.filter((e) => e.type && e.type.toLowerCase().includes('workshop'));
const sortedWorkshops = allWorkshops.sort((a, b) => new Date(a.date).getTime() - new Date(b.date).getTime());
const nextWorkshop = sortedWorkshops.find((e) => new Date(e.date) >= now);
const prevWorkshops = sortedWorkshops
  .filter((e) => new Date(e.date) < now)
  .reverse()
  .slice(0, 5);

// 4. Logic for "Upcoming" (Card 3)
const upcomingMisc = events
  .filter((e) => (!e.type || !e.type.toLowerCase().includes('workshop')) && new Date(e.date) >= now)
  .sort((a, b) => new Date(a.date).getTime() - new Date(b.date).getTime())
  .slice(0, 5);

// Date formatters
const fmt = new Intl.DateTimeFormat("en-US", {
  month: "short",
  day: "numeric",
});
const fmtFull = new Intl.DateTimeFormat("en-US", {
  weekday: "short",
  month: "short",
  day: "numeric",
  hour: "numeric",
  minute: "2-digit",
});
---

<Layout
  title='Home'
  pageTitle='W&M ACM Student Chapter'
  description='The W&M ACM chapter Website.'
>
  <main class="home-container">
    <section class="hero-section">
      <div class="hero-content">
        <h1 class="hero-title">W&M ACM</h1>
        <p class="hero-subtitle">Association for Computing Machinery Student Chapter</p>
        
        <div class="hero-buttons">
          <a href="/connect" class="btn btn-outline">Join us</a>
          <a href="/about" class="btn btn-outline">Learn more</a>
          <a href="/resources" class="btn btn-outline">Info guide</a>
        </div>
      </div>
    </section>

    <section class="events-section">
      <h2 class="section-title">Featured Events</h2>
      
      <div class="events-grid featured-grid">
        
        <div class="featured-card">
          <div class="featured-content">
            <h3 class="featured-title">&hacks</h3>
            <p class="featured-desc">
              Join us for William & Mary's annual hackathon! Build amazing projects, 
              meet industry sponsors, and compete for prizes in a 24-hour coding marathon.
            </p>
          </div>
          <a href="https://andhacks.cs.wm.edu/" target="_blank" class="featured-link">Visit &hacks &rarr;</a>
        </div>

        <div class="featured-card flip-container" id="workshop-card">
          <div class="flip-inner">
            
            <div class="flip-front">
              <div class="featured-content">
                <h3 class="featured-title">Next Workshop</h3>
                {nextWorkshop ? (
                  <>
                    <p class="featured-highlight">{nextWorkshop.name}</p>
                    <p class="featured-meta">{nextWorkshop.date ? fmtFull.format(nextWorkshop.date) : ''}</p>
                    <p class="featured-desc">{nextWorkshop.blurb || 'Join us for our next hands-on technical workshop.'}</p>
                  </>
                ) : (
                  <p class="featured-desc">No upcoming workshops scheduled yet. Check back soon!</p>
                )}
              </div>
              <button class="featured-link flip-trigger">Previous Workshops &rarr;</button>
            </div>

            <div class="flip-back">
              <div class="featured-content">
                <h3 class="featured-title">Previous Workshops</h3>
                {prevWorkshops.length > 0 ? (
                  <ul class="event-list">
                    {prevWorkshops.map(e => (
                      <li>
                        <span class="list-date">{fmt.format(e.date)}</span>
                        <span class="list-name">{e.name}</span>
                      </li>
                    ))}
                  </ul>
                ) : (
                  <p class="featured-desc">No past workshops found.</p>
                )}
              </div>
              <button class="featured-link flip-trigger">Show next workshop &rarr;</button>
            </div>
            
          </div>
        </div>

        <div class="featured-card">
          <div class="featured-content">
            <h3 class="featured-title">Upcoming</h3>
            {upcomingMisc.length > 0 ? (
              <ul class="event-list">
                {upcomingMisc.map(e => (
                  <li>
                    <span class="list-date">{fmt.format(e.date)}</span>
                    <span class="list-name">{e.name}</span>
                  </li>
                ))}
              </ul>
            ) : (
              <p class="featured-desc">No other upcoming events right now.</p>
            )}
          </div>
          <a href="/events" class="featured-link">See Calendar &rarr;</a>
        </div>

      </div>
    </section>

  </main>
</Layout>

<script>
  // Runs on initial load AND after every navigation
  document.addEventListener('astro:page-load', () => {
    
    const flipTriggers = document.querySelectorAll('.flip-trigger');
    
    flipTriggers.forEach(btn => {
      // Remove old listeners to be safe (optional, but good practice)
      const newBtn = btn.cloneNode(true);
      btn.parentNode.replaceChild(newBtn, btn);

      newBtn.addEventListener('click', (e) => {
        const card = e.target.closest('.flip-container');
        if (card) {
          const inner = card.querySelector('.flip-inner');
          if (inner) inner.classList.toggle('flipped');
        }
      });
    });

  });
</script>