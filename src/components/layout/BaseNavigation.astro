---
interface Props {
  pageTitle?: string;
}

const navigationItems = [
  { name: 'Home', url: '/' },
  { name: 'About', url: '/about/'},
  { name: 'Events', url: '/events/' },
  { name: 'Connect', url: '/connect/' },
  { name: 'Resources', url: '/resources/' },
  { name: '&hacks', url: 'https://andhacks.cs.wm.edu/'}
];

const { pageTitle } = Astro.props;
---

<header class="simple-header">
  <div class="header-content">
    <a href='/' title='Back to Home' class="brand-link">
      <span class="brand-text">W&M ACM</span>
    </a>
    
    <nav class="desktop-nav">
      <ul class="nav-list">
        {navigationItems.map((item) => (
          <li>
            <a href={item.url} class="nav-item">
              {item.name}
            </a>
          </li>
        ))}
      </ul>
    </nav>
  </div>
</header>

<style>
  /* Local styles for the header to ensure simplicity */
  .simple-header {
    background-color: white;
    padding: 1.5rem 2rem;
    width: 100%;
    box-sizing: border-box;
  }

  .header-content {
    max-width: 1200px;
    margin: 0 auto;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .brand-text {
    font-family: 'DM Serif Display', serif;
    font-size: 1.8rem;
    color: #333;
    font-weight: bold;
    text-decoration: none;
  }
  
  .brand-link {
    text-decoration: none;
  }

  .desktop-nav .nav-list {
    display: flex;
    gap: 2rem;
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .nav-item {
    text-decoration: none;
    color: #555;
    font-family: system-ui, sans-serif;
    font-weight: 500;
    font-size: 1rem;
    transition: color 0.2s ease;
  }

  .nav-item:hover {
    color: #70D4AC; /* Logo Green */
    text-decoration: underline;
  }
  
  @media (max-width: 768px) {
    .header-content {
      flex-direction: column;
      gap: 1rem;
    }
    .desktop-nav .nav-list {
      gap: 1rem;
      font-size: 0.9rem;
      flex-wrap: wrap;
      justify-content: center;
    }
  }
</style>